<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hard.playback_player">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app.PlaybackPlayerApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Playback_player.day">

        <activity android:name="com.hard.playback_player.activities.PlaylistActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.hard.playback_player.activities.SettingsActivity"></activity>

        <activity android:name="com.hard.playback_player.activities.SongActivity" />

    </application>

</manifest>